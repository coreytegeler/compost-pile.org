{
  "name": "compost-pile",
  "version": "1.0.0",
  "engines": {
    "node": "7.4.0",
    "npm": "4.1.1"
  },
  "private": true,
  "scripts": {
    "sass-admin": "sass --watch public/sass/admin.scss:public/css/pre-admin.css",
    "sass-public": "sass --watch public/sass/public.scss:public/css/pre-public.css",
    "prefix-admin" : "postcss -w -u autoprefixer public/css/pre-admin.css -o public/css/admin.css",
    "prefix-public" : "postcss -w -u autoprefixer public/css/pre-public.css -o public/css/public.css",
    "css" : "npm run sass-admin & npm run prefix-admin & npm run sass-public & npm run prefix-public",
    "js": "coffee -o public/js/ -cw public/coffee/",
    "start": "nodemon ./bin/www localhost 3000",
    "go": "npm run css & npm run js & npm run start"
  },
  "dependencies": {
    "async": "2.0.0-rc.6",
    "body-parser": "~1.13.2",
    "bson": "~0.4.12",
    "cookie-parser": "~1.3.5",
    "csvtojson": "^0.4.3",
    "debug": "~2.2.0",
    "express": "~4.13.1",
    "express-session": "~1.0.0",
    "method-override": "~1.0.0",

    "mongodb": "^1.4.40",
    "monk": "~1.0.1",
    "morgan": "~1.6.1",
    "multer": "^1.1.0",

    "passport" : "~0.1.17",         
    "passport-local" : "~0.1.6",    
    "passport-local-mongoose": "^1.0.0",
    "connect-flash" : "~0.1.1",     
    "bcrypt-nodejs" : "latest",

    "coffee-script": "1.10.0",
    "pug" : "2.0.0-beta3",
    "node-sass": "4.3.0",
    "autoprefixer": "^6.5.1",
    "cssnano": "^3.8.0",
    "less-middleware": "^2.2.0",
    "autoprefixer": "^6.5.1",
    "cssnano": "^3.8.0",
    "moment": "~2.10.3",
    "serve-favicon": "~2.3.0",
    "slug": "~0.9.1"
  }
}