extends ../layout
block content
	main.admin
		-if(error)
			| error
		-if(session)
			| session.error
		form#location(method='post' action='/admin/login')
			header
				h1 Login
			h2 Email
			input(name='email' type='email' required)
			h2 Password
			input(name='password' type='password' required)
			input(type='submit' value name='submit').submit.square.save