extends layout

block content
	aside
	header#logo
		a#logoLink(href= '/')
	main
		section#locations
			-for(var i in locations)
				-var location = locations[i]
					.location(id= location.slug, data-slug= location.slug)
						.content
							header
								h1 #{location.name}
								.close
							.graph
								.easel
								.arrow.left
									img(src ='images/left.svg')
								.arrow.right
									img(src ='images/right.svg')
								.popup.model
									.row.date
										.cell.title='Date'
										.cell.data
									.row.value
										.cell.title
										.cell.data
									.point
						include info.jade
		include compostables.jade
	footer
		.top
		.dirt
			.inner